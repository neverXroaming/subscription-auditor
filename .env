# Gmail API Configuration
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_refresh_token_here

# Bank API Configuration (if using Plaid or similar)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox  # or development/production

# OpenAI API for AI-powered analysis (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Email settings for sending refund requests
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Notification settings
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Database (optional - for storing results)
DATABASE_URL=sqlite:///subscriptions.db

# Logging level
LOG_LEVEL=INFO

# Rate limiting
API_RATE_LIMIT=10  # requests per minute
